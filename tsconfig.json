{
    "compilerOptions": {
        "target": "es6",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "filesGlob": [
        "./src/test.ts",
        "./src/**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.d.ts"
    ],
    "files": [
        "./src/annotations.ts",
        "./src/application.ts",
        "./src/cache.ts",
        "./src/co.ts",
        "./src/context.ts",
        "./src/index.ts",
        "./src/interfaces.ts",
        "./src/middleware/logger.ts",
        "./src/middleware/profiler.ts",
        "./src/router/index.ts",
        "./src/router/route.ts",
        "./src/service-activator.ts",
        "./src/tasks.ts",
        "./src/tasks/0-services.ts",
        "./src/tasks/1-initializers.ts",
        "./src/tasks/2-middlewares.ts",
        "./src/tasks/3-controllers.ts",
        "./src/tasks/4-routes.ts",
        "./src/utils.ts"
    ]
}
